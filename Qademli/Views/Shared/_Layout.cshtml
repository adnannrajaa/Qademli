    <script src="~/js/Utility/Utility.js"></script>
    <script src="~/js/Application/GetApplicationFormStatus.js"></script>

    <script>
        $(() => {
            $.validator.addMethod("invalidContact", (value) => {
                let contact = value
                var regexPattern = new RegExp(/^\d{4}[- ]?\d{7}$/);    // regular expression pattern
                let isValid = regexPattern.test(contact);
                if (!isValid) {
                    return false;
                }
                return true;
            });

            $('#callDate').datepicker({
                language: 'en',
                autoClose: true,
                timepicker: true,
                dateFormat: "M dd, yyyy ",
                timeFormate: "hh:ii aa",
                minDate: new Date(),


            })
            let token = localStorage.getItem("token");
            if (token == 'null' || token == null) {

                $("#viewAccount").css('display', 'none');
                $("#updateAccount").css('display', 'none');
                $("#schACall").css('display', 'none');
            }
            else {
                $("#loginLogout").html("Logout")
            }
            $("#scheduleCall").on("click", () => {
                $("#scheduleACallModal").modal("show")
            })

            $('#scheduleACallModal form').validate({
                rules: {
                    mobile: {
                        required: true,
                        invalidContact:true
                        },
                    callDate: "required",
                },
                messages: {
                    mobile: {
                        required: "Mobile No is Required",
                        invalidContact:"Please enter valid mobile no."
                    },
                    callDate: "Please select call date & time",
                },
                submitHandler: function (form) {
                    $("#btnScheduleCall").attr("disabled", true);
                    var form = new FormData();
                    form.append("UserId", GetUserId());
                    form.append("Mobile", $('#mobile').val());
                    form.append("CallDate", $('#callDate').val());
                    form.append("Status", 2);



                    var xhr = SendAjaxRequestWithFormData("/api/CallSchedules", "POST", form)
                    if (xhr.status === 200) {
                        $('#scheduleACallModal').modal('hide');
                        $.notify("Your call schedule successfully", "success")
                        $("#scheduleACallModal form").trigger("reset");
                        $("#btnScheduleCall").removeAttr("disabled");
                    } else {
                        $('#scheduleACallModal').modal('hide');
                        $("#scheduleACallModal form").trigger("reset");
                        $("#btnScheduleCall").removeAttr("disabled");
                        $.notify("Your Request Return " + xhr, "error")
                    }
                }
            });
        })



    </script>

    @RenderSection("Scripts", required: false)
