<!DOCTYPE html>
<html lang="en">
<meta http-equiv="content-type" content="text/html;charset=utf-8" />

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewData["Title"] | Qademli</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--       <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/assets/css/paper-kit.mindc68.css?v=2.3.0" rel="stylesheet" />
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <link href="~/assets/css/responsive.css" rel="stylesheet" />
    <link href="~/assets/js/datePicker/datepicker.min.css" rel="stylesheet" />
    <link href="~/assets/demo/vertical-nav.css" rel="stylesheet" />


</head>

<body class="contact-page sidebar-collapse">
    <!-- Navbar -->
    <header id="header" class="pos_rel">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <div class="navbar-translate">
                    <a class="navbar-brand" href="./" title="Qademli" data-placement="bottom">
                        <img src="~/assets/img/logo.png" alt="logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav w-100">
                        <li class="nav-item">
                            <a asp-area="User" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                        </li>
                        <li class="dropdown nav-item">
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false">
                                Services
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-danger">
                                <a asp-area="User" asp-controller="Home" asp-action="Universities" class="dropdown-item">
                                    Universities
                                </a>
                                <a asp-area="User" asp-controller="Home" asp-action="LearningCenter" class="dropdown-item">
                                    Learning Center
                                </a>
                                <a asp-area="User" asp-controller="Home" asp-action="IELTS" class="dropdown-item">
                                    IELTS
                                </a>
                                <a asp-area="User" asp-controller="Home" asp-action="TOEFL" class="dropdown-item">
                                    TOEFL
                                </a>
                                <a asp-area="User" asp-controller="Home" asp-action="Visa" class="dropdown-item">
                                    Visa
                                </a>
                                @*<a asp-area="User" asp-controller="Home" asp-action="Index" class="dropdown-item">
                                        Visa
                                    </a>*@
                            </div>
                        </li>
                        <li class="nav-item">
                            <a asp-area="User" asp-controller="Home" asp-action="AboutUs" class="nav-link">
                                About Us
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="User" asp-controller="Home" asp-action="ContactUs" class="nav-link">
                                Contact Us
                            </a>
                        </li>
                        <li class="dropdown nav-item ml-auto">
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-danger">
                                <a asp-area="User" asp-controller="Home" asp-action="Application" id="viewAccount" class="dropdown-item">
                                    Application
                                </a>
                                <a asp-area="Account" asp-controller="Login" asp-action="UpdateAccount" id="updateAccount" class="dropdown-item">
                                    Account
                                </a>
                                <a asp-area="Account" asp-controller="Login" asp-action="Login" id="loginLogout" class="dropdown-item">
                                    Log in
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- End Navbar -->
    @RenderBody()
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h4>Qademli</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde, dolore omnis quaerat pariatur est dolor neque voluptas beatae ipsum consectetur porro ipsa.</p>

                </div>
                <div class="col-md-9 col-sm-9 col-12 ml-auto mr-auto">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="links">
                                <h4>About</h4>
                                <ul class="stacked-links">
                                    <li><a asp-area="User" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                                    <li><a asp-area="User" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="links">
                                <h4>Services</h4>
                                <ul class="stacked-links">
                                    <li><a asp-area="User" asp-controller="Home" asp-action="Universities">Apply for University</a></li>
                                    @*<li><a >Transfer to University</a></li>*@
                                    <li><a asp-area="User" asp-controller="Home" asp-action="LearningCenter">Apply for Learning Center</a></li>
                                    <li><a asp-area="User" asp-controller="Home" asp-action="Visa">Apply for Visa</a></li>
                                    <li><a asp-area="User" asp-controller="Home" asp-action="IELTS">Apply for IELTS Test</a></li>
                                    <li><a asp-area="User" asp-controller="Home" asp-action="TOEFL">Apply for TOEFL Test</a></li>

                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="links">
                                <h4>Legal</h4>
                                <ul class="stacked-links">
                                    <li><a href="#">FAQs</a></li>
                                    <li><a href="#">Terms & Conditions</a></li>
                                    <li><a href="#">Privacy Policy</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row footer_btm text-center mx-auto w_1000">
                <div class="col-md-12">
                    <p>
                        Copyright ©
                        <script>
                            document.write(new Date().getFullYear())
                        </script>, Qademli. Powered By IDigital Kuwait Company
                    </p>
                </div>
            </div>
        </div>
    </footer>







    <!--   Core JS Files   -->
    <script src="~/assets2/js/core/jquery.min.js"></script>

    <script src="~/assets/js/core/bootstrap.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>

    <!-- Control Center for Paper Kit: parallax effects, scripts for the example pages etc -->

    <script src="~/assets/js/paper-kit.mindc68.js?v=2.3.0"></script>

    <script src="~/assets/js/datePicker/datepicker.min.js"></script>
    <script src="~/assets/js/datePicker/datepicker.en.js"></script>
    <script src="~/assets/demo/vertical-nav.js"></script>
    <script src="~/assets/js/plugins/bootstrap-tagsinput.js"></script>
    <script src="~/assets/js/plugins/bootstrap-selectpicker.js" type="text/javascript"></script>
    <script src="~/assets2/js/plugins/moment.min.js"></script>

    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/notify.min.js"></script>
    <script src="~/js/Utility/Utility.js"></script>
    <script src="~/js/Application/GetApplicationFormStatus.js"></script>

    <script>
        $(() => {
            let token = localStorage.getItem("token");
            if (token == 'null' || token == null) {

                $("#viewAccount").css('display', 'none');
                $("#updateAccount").css('display', 'none');
            }
            else {
                $("#loginLogout").html("Logout")
            }
        })

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
